{% extends "base.html.twig" %}

{% block title %}
    {{ parent() }}
	Proposals
{% endblock %}

{% block body %}
    <section>
        <div class="container">
            <h1 class="proposal-title">Proposals :</h1>
            <hr class="solid">
            <hr>
            <div class="row row-cols-2">
                {% for proposal in proposals %}
                <div class="card col proposal-card">
                    <div class="card-header">
                        <p class"align-items-center">Proposed by : <strong>{{ proposal.author.wallet|slice(0, 6) }}...{{ proposal.author.wallet|slice(36, 41) }}</strong><span class="badge bg-success text-light ms-4">{{ proposal.status }}</span></p>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ proposal.title }}</h5>
                        <div class="badge-section mt-2">
                            <span class="badge bg-warning text-light ms-2">Bitcoin</span>
                            <span class="badge bg-warning text-light ms-2">Proof of work</span>
                        </div>
                        <div class="progress mt-2">
                            <div class="progress-bar-striped bg-success d-flex justify-content-center" style="width:70%">70%</div>
                            <div class="progress-bar-striped bg-warning d-flex justify-content-center" style="width:5%">5%</div>
                            <div class="progress-bar-striped bg-danger d-flex justify-content-center" style="width:25%">25%</div>
                        </div>
                        <a href="#" class="btn btn-primary mt-2">See more</a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}