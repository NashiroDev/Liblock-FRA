{% extends "base.html.twig" %}

{% block title %}
    {{ parent() }}
	Articles
{% endblock %}

{% block body %}
    <section>
        <div class="page-head">
            <img src="./assets/article-banner.png" class="img-fluid" alt="missing">
            <h2>Articles</h2>
        </div>
        <div class="container">
            <hr class="solid">
            <hr>
            <div class="page-body row row-cols-4">
                <div class="col-md-3 ms-4 mb-4 temp-class">
                    <p>Form filter, search & tag search is here</p>
                    {# Form filter, search & tag search is here #}
                </div>
                {% for article in articles %}
                <div class="col-3 ms-4 card">
                    <img src="./assets/logo-color.svg" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text">{{ article.content|slice(0, 150) }}...</p>
                        <a href="{{ path() }}" class="btn btn-primary">Read</a>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
{% endblock %}